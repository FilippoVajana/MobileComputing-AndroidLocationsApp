<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:tag="Profile Fragment">

    <RelativeLayout
        android:id="@+id/contentPanel"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/profileIcon"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_alignParentTop="true"
            android:src="@drawable/ic_profile_black_24dp"/>

        <TextView
            android:id="@+id/userNameText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:paddingHorizontal="@dimen/activity_horizontal_margin"
            android:layout_toRightOf="@id/profileIcon"
            android:text="Marco Tullio Cicerone"
            android:textSize="24dp"
            android:scrollHorizontally="false"/>

        <TextView
            android:id="@+id/userMessageText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/activity_horizontal_margin"
            android:layout_below="@id/profileIcon"
            android:layout_marginTop="8dp"
            android:textSize="20dp"
            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua"/>

        <com.google.android.gms.maps.MapView
            android:id="@+id/mapView"
            android:background="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/userMessageText"
            android:layout_marginTop="8dp"/>

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>